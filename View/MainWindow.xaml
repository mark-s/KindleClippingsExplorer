<Window x:Class="ClippingsExplorer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:entities="clr-namespace:ClippingsExplorer.Entities"
        mc:Ignorable="d"
        Title="MainWindow" Height="569" Width="1172" d:DataContext="{d:DesignData MainWindowViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <ListBox  Grid.Column="0" ItemsSource="{Binding Books}"  >
        </ListBox>


        <ListBox Grid.Column="1"
                 
                  />

        <TextBox Grid.Column="2" Background="BlueViolet"/>


    </Grid>
</Window>
